                    <DataGrid x:Name="dgv_users" Height="322" Margin="6,0" VerticalAlignment="Bottom"/>
                </Grid>
            </TabItem>
            <TabItem Header="Add New">

            </TabItem>






        </TabControl>
    </Grid>
</Window>
